{
  "shadow": {
    "steps": [
      { "property": "box-shadow", "template": "@{token}" }
    ]
  },
  "ring": {
    "steps": [
      { "property": "box-shadow", "template": "0 0 0 @{width} @{color} / @{opacity}" },
      { "property": "box-shadow", "template": "0 0 0 @{offsetWidth} @{offsetColor}", "append": true, "optional": true }
    ]
  },
  "transform": {
    "steps": [
      { "property": "transform", "template": "translate(@{translate}) rotate(@{rotate}) skew(@{skew}) scale(@{scale})" }
    ]
  },
  "filter": {
    "steps": [
      { "property": "filter", "template": "blur(@{blur}) brightness(@{brightness}) contrast(@{contrast}) hue-rotate(@{hueRotate}) saturate(@{saturate}) drop-shadow(@{dropShadow})" }
    ]
  },
  "gradient": {
    "steps": [
      { "property": "background-image", "template": "linear-gradient(to right, @{from}, @{via}, @{to})" }
    ]
  },
  "font": {
    "order": ["family", "size", "weight", "style"],
    "steps": [
      { "property": "font-family", "template": "@{family}" },
      { "property": "font-size", "template": "@{size}", "optional": true },
      { "property": "font-weight", "template": "@{weight}", "optional": true },
      { "property": "font-style", "template": "@{style}", "optional": true }
    ]
  }
}
