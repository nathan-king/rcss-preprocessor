{
  "name": "rcss-syntax",
  "displayName": "RCSS Syntax",
  "description": "Lightweight TextMate grammar for RCSS (tokens, vars, presets, nested blocks).",
  "version": "0.0.4",
  "publisher": "local",
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:rcss",
    "onCommand:rcss.buildFile"
  ],
  "contributes": {
    "languages": [
      {
        "id": "rcss",
        "aliases": [
          "RCSS"
        ],
        "extensions": [
          ".rcss"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rcss",
        "scopeName": "source.rcss",
        "path": "./syntaxes/rcss.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "RCSS Accent",
        "uiTheme": "vs-dark",
        "path": "./themes/rcss-color-theme.json"
      }
    ],
    "commands": [
      {
        "command": "rcss.buildFile",
        "title": "RCSS: Build Current File"
      }
    ],
    "configuration": {
      "title": "RCSS",
      "properties": {
        "rcss.buildOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run the RCSS build command when saving an .rcss file."
        },
        "rcss.buildCommand": {
          "type": "string",
          "default": "cargo run -p rcss-cli -- build ${file}",
          "description": "Command to build the current RCSS file. ${file} is replaced with the absolute path to the saved file."
        },
        "rcss.buildCwd": {
          "type": "string",
          "default": "",
          "description": "Optional working directory for the build command. Defaults to the first workspace folder containing the file, or the file's directory."
        }
      }
    }
  }
}
